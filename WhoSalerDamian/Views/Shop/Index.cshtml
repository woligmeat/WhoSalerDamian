@model ShopModel
@{
    ViewData["Title"] = "Shops";
}

<div class="row">
    <div class="col-md-6">
        <h2>Add new shop</h2>
        <p>Add your shop for buy products</p>
        <hr class="hr"/>
        <form method="post" asp-action="Add">
            <div class="mb-3">
                <label asp-for="ShopName"></label>
                <input asp-for="ShopName" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="ShopOwnerName"></label>
                <input asp-for="ShopOwnerName" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="ShopCity"></label>
                <input asp-for="ShopCity" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="ShopRoad"></label>
                <input asp-for="ShopRoad" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="ShopZipCode"></label>
                <input asp-for="ShopZipCode" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="ShopPhone"></label>
                <input asp-for="ShopName" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="ShopEmail"></label>
                <input asp-for="ShopName" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <button type="submit" class="btn btn-primary">Add my shop</button>
        </form>
        @* <button class="btn btn-primary" asp-controller="Shop" asp-action="Index">Add</button> *@
    </div>
    <div class="col-md-6">
        <h2>Shop List</h2>
        <p>Look at the shop list below or show all</p>
        <hr class="hr" />
        <button class="btn btn-primary" asp-controller="Shop" asp-action="List">Show all</button>
    </div>
</div>




