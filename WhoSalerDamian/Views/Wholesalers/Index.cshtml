@model WholesalersModel;
@{
    ViewData["Title"] = "Wholesalers";
}

<div class="row">
    <div class="col-md-6">
        <h2>Add new wholesaler</h2>
        <hr class="hr"/>
        <form method="post" asp-action="Add">
            <div class="mb-3">
                <label asp-for="WholesalerName"></label>
                <input asp-for="WholesalerName" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="WholesalerOwnerName"></label>
                <input asp-for="WholesalerOwnerName" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="WholesalerCity"></label>
                <input asp-for="WholesalerCity" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="WholesalerRoad"></label>
                <input asp-for="WholesalerRoad" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="WholesalerZipCode"></label>
                <input asp-for="WholesalerZipCode" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="WholesalerPhone"></label>
                <input asp-for="WholesalerPhone" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <div class="mb-3">
                <label asp-for="WholesalerEmail"></label>
                <input asp-for="WholesalerEmail" class="form-control" />
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
            
            <button type="submit" class="btn btn-primary">Add wholesaler</button>
        </form>
        @* <button class="btn btn-primary" asp-controller="Shop" asp-action="Index">Add</button> *@
    </div>
    <div class="col-md-6">
        <h2>Wholesalers list</h2>
        <p>Look at the wholesalers list below or show all</p>
        <hr class="hr" />
        <button class="btn btn-primary" asp-controller="Wholesalers" asp-action="ListOwner">Show all</button>
    </div>
</div>
